{
  "info": {
    "name": "Spotify to YouTube Backend API",
    "description": "API for converting playlists between Spotify and YouTube",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Get Spotify Auth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/spotify",
              "host": ["{{base_url}}"],
              "path": ["auth", "spotify"]
            }
          }
        },
        {
          "name": "Get YouTube Auth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/youtube",
              "host": ["{{base_url}}"],
              "path": ["auth", "youtube"]
            }
          }
        }
      ]
    },
    {
      "name": "Playlists",
      "item": [
        {
          "name": "Create Playlist",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Playlist\",\n  \"description\": \"A sample playlist\",\n  \"user_id\": \"user123\",\n  \"platform\": \"spotify\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/playlists",
              "host": ["{{base_url}}"],
              "path": ["playlists"]
            }
          }
        },
        {
          "name": "Get Playlists",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/playlists",
              "host": ["{{base_url}}"],
              "path": ["playlists"]
            }
          }
        },
        {
          "name": "Convert Playlist",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"source_platform\": \"spotify\",\n  \"target_platform\": \"youtube\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/playlists/:id/convert",
              "host": ["{{base_url}}"],
              "path": ["playlists", ":id", "convert"],
              "variable": [
                {
                  "key": "id",
                  "value": "playlist_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Songs",
      "item": [
        {
          "name": "Search Songs",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/songs/search?q=imagine dragons&limit=10",
              "host": ["{{base_url}}"],
              "path": ["songs", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "imagine dragons"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
